{
  "name": "deepl-webview",
  "displayName": "DeepL 翻訳モーダル",
  "description": "VS Code標準モーダルUIでDeepL翻訳を行う拡張機能",
  "version": "0.0.1",
  "publisher": "deepl-webview-publisher",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:deepl-webview.translateInput"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deepl-webview.translateInput",
        "title": "DeepL 翻訳（入力モーダル）"
      }
    ],
    "keybindings": [
      {
        "command": "deepl-webview.translateInput",
        "key": "ctrl+alt+t"
      }
    ],
    "configuration": {
      "title": "DeepL 翻訳モーダル",
      "properties": {
        "deeplWebview.apiKey": {
          "type": "string",
          "description": "DeepL API キー",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0"
  }
}
